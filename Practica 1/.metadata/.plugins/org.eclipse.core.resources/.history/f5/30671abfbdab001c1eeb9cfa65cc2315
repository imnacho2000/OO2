package ar.edu.unlp.info.oo2.ejercicio2;

import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

public class MediaPlayerTest {
	
	MediaPlayer mediaPlayer;
	Audio audio;
	VideoFile videoFile;
	VideoStreamAdapter videoStreamAdapter;
	
	@BeforeEach
	void setUp() throws Exception {
		
		mediaPlayer = new MediaPlayer();
		audio = new Audio();
		videoFile = new VideoFile();
		videoStreamAdapter = new VideoStreamAdapter();
		
		mediaPlayer.agregarReproductores(audio);
		mediaPlayer.agregarReproductores(videoFile);
		mediaPlayer.agregarReproductores(videoStreamAdapter);
		
	}
    @Test
    public void testTodo() {
    	assertEquals(3,mediaPlayer.listaLength());
    	Audio obj = (Audio)mediaPlayer.getMedias(0);
    	assertEquals("Reproduciendo",obj.play());
    	VideoFile objV = (VideoFile)mediaPlayer.getMedias(1);
    	assertEquals("Reproduciendo",objV.play());
    	VideoStreamAdapter objC = (VideoStreamAdapter)mediaPlayer.getMedias(2);
    	assertEquals("Reproduciendo",objC.play());
    }
    
}

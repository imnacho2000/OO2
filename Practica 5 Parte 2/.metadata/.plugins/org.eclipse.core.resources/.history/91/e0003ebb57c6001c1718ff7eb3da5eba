package ar.edu.unlp.info.oo2.facturacion_llamadas;

public abstract class Llamada {
	protected String tipoDeLlamada;
	private Persona emisor;
	private Persona remitente;
	public int dur;
	
	public Llamada(String tipoDeLlamada, Persona emisor, Persona remitente, int duracion) {
		this.tipoDeLlamada = tipoDeLlamada;
		this.emisor = emisor;
		this.remitente= remitente;
		this.dur = duracion;
	}

	public String getTipoDeLlamada() {
		return tipoDeLlamada;
	}

	public void setTipoDeLlamada(String tipoDeLlamada) {
		this.tipoDeLlamada = tipoDeLlamada;
	}
	public void setEmisor(Persona emisor) {
		emisor = emisor;
	}
	public Persona getRemitente() {
		return remitente;
	}
	public void setRemitente(Persona remitente) {
		this.remitente = remitente;
	}

	public int getDur() {
		return dur;
	}

	public void setDur(int dur) {
		this.dur = dur;
	}

	public Persona getEmisor() {
		return emisor;
	}
	
	public abstract double calcularCosto();
	
	
}
